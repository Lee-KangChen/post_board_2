<%= render 'shared/title', title: 'Post List'%>

<% @posts.each do |post| %>

  <div class="row">
    <div class="well col-md-6">
      <p>
        <h4><%= post.title %></h4>
      </p>
      <p>
        <h4><%= post.content %></h4>
      </p>
      <span>
        <%= link_to "Show post", post_path(post) %>
      </span>
    </div>
  </div>
<% end %>
