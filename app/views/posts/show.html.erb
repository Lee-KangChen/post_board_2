<%= render 'shared/title', title: "#{@post.title}" %>

<div class="row">
  <div class="col-md-8 well">
    <%= render partial: "categories/category", collection: post.categories %>
    <%= @post.title %>
    <p>
      <%= @post.content %>
    </p>
      <br>
      <small>posted by </small><%= "#{@post.user.name}" %>
  </div>
</div>

<h4>All Comments:</h4>

<% @post.comments.each do |c|%>
  <div class="row">
    <div class="col-md-6 well">
      <p>
        <%= c.content %>
      </p>
        <br>
        <small>commented by </small><%= "#{c.user.name}" %>
    </div>
  </div>
<% end %>

<% if logged_in?%>

  <h4>Leave a comment:</h4>
  <%= form_for [@post, @comment] do |f| %>
    <div class="row">
      <%= f.text_area :content, row: 3, class: 'col-md-4' %>
      <div class="col-md-2">
        <%= f.submit 'Create comment', class: 'btn btn-primary' %>
      </div>
    </div>
  <br>
  <% end %>

<% end %>

<hr>

<div class="row">
  <%= link_to 'go back to all posts', posts_path %>
</div>
