<%= render 'shared/title', title: "#{@user.name}'s activites" %>

<h4><%= current_user.name %>'s posts:</h4>

<% @user.posts.each do |post| %>

  <div class="row">
    <div class="col-md-8 well">
      <h3><%= post.title %></h3>
      <p>
        <%= post.content %>
      </p>
      <br>
      <small>posted by </small><%= "#{post.user.name}" %>
    </div>
  </div>

<% end %>
<hr>
<h4><%= current_user.name %>'s comments:</h4>

<% @user.comments.each do |c| %>
  <div class="row">
    <div class="col-md-6 well">
      <p>
        <%= c.content %>
      </p>
      <br>
      <small>commented by </small><%= "#{c.user.name}" %>
    </div>
  </div>
<% end %>

<%= link_to 'Back', root_path %>
